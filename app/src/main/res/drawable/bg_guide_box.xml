<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- This makes the inside of the shape completely transparent,
         so the camera preview can be seen through it. -->
    <solid android:color="@android:color/transparent" />

    <!-- This creates a solid white border around the shape. -->
    <stroke
        android:width="2dp"
        android:color="@android:color/white" />

    <!-- This gives the rectangle slightly rounded corners for a modern look. -->
    <corners android:radius="8dp" />

</shape>
